    body {
    /*    background-image: url('css/Images/blueback.jpg');*/
        background-image: url('@Url.Content("~/css/Images/blueback.jpg")');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: Arial, sans-serif;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
