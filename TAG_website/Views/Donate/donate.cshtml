            <em>If other Option ,Please specify your item</em>
        </label>
        <textarea asp-for="otherItem" class="form-control" id="exampleTextarea" rows="3"></textarea>
        <small id="hint" class="form-text text-muted" style="display: none;">If your item is not listed above, please specify it here.</small>
    </div>

    <script>
        const textarea = document.getElementById("exampleTextarea");
        const hint = document.getElementById("hint");

        textarea.addEventListener("focus", function () {
            hint.style.display = "block";
        });

        textarea.addEventListener("blur", function () {
            if (textarea.value === "") {
                hint.style.display = "none";
            }
        });
    </script>

