    <script>
                // Get all the bar graph items
                const items = document.querySelectorAll('.bar-graph__item');

                // Initialize an array to store the values
                const values = [];

                // Load values from localStorage if available
                if (localStorage.getItem('barGraphValues')) {
                    const storedValues = JSON.parse(localStorage.getItem('barGraphValues'));
                    values.push(...storedValues);
                } else {
                    // If no values are stored, initialize with default values
                    items.forEach(() => {
                        values.push(0.8); // Default value is 80%
                    });
                }

                // Function to update the bar and save the value in localStorage
                function updateBar(index, newValue) {
            const bar = items[index].querySelector('.bar-graph__bar');
            const input = items[index].querySelector('.bar-graph__number-input');
            const number = items[index].querySelector('.bar-graph__number');

            // Ensure the value is within the desired range
            newValue = Math.min(1000, Math.max(0, newValue));

            const widthPercentage = (newValue /100) * 1000;

            values[index] = newValue;
           bar.style.width = widthPercentage + '%';



            // Set the input's value without any conversion or formatting
            input.value = newValue;

            // Set the number's content without any conversion or formatting
            number.textContent = newValue*100;

            localStorage.setItem('barGraphValues', JSON.stringify(values));
        }



                // Loop through each item
                items.forEach((item, index) => {
                    // Set the initial width of the bar
                    const widthPercentage = values[index];
                    updateBar(index, widthPercentage);

                    // Get the input field
                    const input = item.querySelector('.bar-graph__number-input');
                    // Get the update button
                    const updateButton = item.querySelector('.update-button');

                    // Add an event listener to update the bar when the button is clicked
                    updateButton.addEventListener('click', () => {
                        const newValue = parseFloat(input.value) /100;
                        if (!isNaN(newValue)) {
                            updateBar(index, newValue);
                        }
                    });
                });
    </script>

